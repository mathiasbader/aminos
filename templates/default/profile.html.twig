{% extends 'base.html.twig' %}

{% block body %}

    <div style="margin-bottom: 12px;">
        <a href="{{ url('index') }}">{{ 'back'|trans }}</a>
    </div>

    <h4>{{ 'language'|trans }}</h4>
    <div>
        <a href="{{ url('lang', { 'lang' : 'en' }) }}" class="btn{% if app.request.locale == 'en' %} active{% endif %}">English</a>
        <a href="{{ url('lang', { 'lang' : 'es' }) }}" class="btn{% if app.request.locale == 'es' %} active{% endif %}">Espa√±ol</a>
        <a href="{{ url('lang', { 'lang' : 'de' }) }}" class="btn{% if app.request.locale == 'de' %} active{% endif %}">Deutsch</a><br><br>
    </div>

    {% if app.user.email is not null %}
        <h4>{{ 'yourAccount'|trans }}</h4>
        <div>
            <span style="font-weight: bold">{{ app.user.name }}</span><br>
            {{ app.user.email }}<br><br>

            <a href="{{ url('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div style="display: flex">
            <div id="registrationLink">
                <h4>Benutzeraccount</h4>
                <a href="#" class="btn" onclick="showRegistration(); return false;">Registrierung</a>
                <a href="#" class="btn" onclick="showLogin(); return false;">Login</a>
            </div>
            <div style="width: 50%; padding-right: 12px; display: none;" id="registration">
                <h4>{{ 'registration'|trans }}</h4>
                <div style="text-align: right;">
                    <a href="#" onclick="hideRegistrationAndLogin(); return false;"><img
                    src="{{ asset('img/icons/close.svg') }}" class="icon-close"></a>
                </div>
                <form action="{{ url('profile') }}" method="post">

                    <label for="email">{{ 'email'|trans }}:</label><br>
                    <input type="email" name="email" id="email" value="{{ app.user.email }}"/><br>

                    <label for="password">{{ 'password'|trans }}:</label><br>
                    <input type="password" name="password" id="password"/><br>

                    <label for="password2">{{ 'repeatPassword'|trans }}:</label><br>
                    <input type="password" name="password2" id="password2"/><br>

                    <div style="text-align: right;">
                        <a href="#" onclick="
                            document.getElementById('registration').style.display = 'none';
                            document.getElementById('login'       ).style.display = 'block';
                            return false;
                        " style="margin-right: 24px;">{{ 'login'|trans }}</a>
                        <input type="submit" class="btn" style="width: auto;" value="{{ 'register'|trans }}"/>
                    </div>
                </form>
            </div>
            <div style="width: 50%; padding-right: 12px; display: none;" id="login">
                <h4>{{ 'login'|trans }}</h4>
                <div style="text-align: right;">
                    <a href="#" onclick="hideRegistrationAndLogin(); return false;"><img
                    src="{{ asset('img/icons/close.svg') }}" class="icon-close"></a>
                </div>
                <form action="{{ url('profile') }}" method="post">
                    <label for="email">{{ 'email'|trans }}:</label><br>
                    <input type="email" name="email" id="email" value="{{ app.user.email }}"/><br>
                    <label for="password">{{ 'password'|trans }}:</label><br>
                    <input type="password" name="password" id="password"/><br>
                    <div style="text-align: right;">
                        <a href="#" onclick="
                            document.getElementById('login'       ).style.display = 'none';
                            document.getElementById('registration').style.display = 'block';
                            return false;
                        " style="margin-right: 24px;">{{ 'registration'|trans }}</a>
                        <input type="submit" class="btn" style="width: auto;" value="Login"/>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        function showRegistration() {
            document.getElementById('registrationLink').style.display = 'none';
            document.getElementById('login'           ).style.display = 'none';
            document.getElementById('registration'    ).style.display = 'block';
        }

        function showLogin() {
            document.getElementById('registrationLink').style.display = 'none';
            document.getElementById('login'           ).style.display = 'none';
            document.getElementById('registration'    ).style.display = 'block';
        }

        function hideRegistrationAndLogin() {
            document.getElementById('login'           ).style.display = 'none';
            document.getElementById('registration'    ).style.display = 'none';
            document.getElementById('registrationLink').style.display = 'block';
        }
    </script>

{% endblock %}
