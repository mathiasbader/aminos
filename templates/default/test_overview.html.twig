{% extends 'base.html.twig' %}

{% block bodyParam %} onLoad="document.getElementById('answer').focus();"{% endblock %}

{% block body %}

    <div style="margin-bottom: 12px;">
        <a href="{{ url('index') }}">{{ 'back'|trans }}</a>
    </div>

    <div>
        {% if activeRun is not null %}
            <a href="{{ url('test', { 'runId' : activeRun.id } ) }}" class="btn btn-special">{{ 'continueActiveTest'|trans }}</a><br>
        {% endif %}
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR_1'  )} ) }}" class="btn">{{ 'testGroup.unpolar'|trans }} 1</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR_2'  )} ) }}" class="btn">{{ 'testGroup.unpolar'|trans }} 2</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR'    )} ) }}" class="btn">{{ 'testGroup.unpolar'|trans }} 1 + 2</a><br>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_POLAR'        )} ) }}" class="btn">{{ 'testGroup.polar'|trans }}</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_CHARGED'      )} ) }}" class="btn">{{ 'testGroup.charged'|trans }}</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_POLAR_CHARGED')} ) }}" class="btn">{{ 'testGroup.polar'|trans }} + {{ 'testGroup.charged'|trans }}</a><br>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_ALL'          )} ) }}" class="btn">{{ 'testGroup.all'|trans }}</a>
    </div>

{% endblock %}
