{% extends 'base.html.twig' %}

{% block bodyParam %} onLoad="document.getElementById('answer').focus();"{% endblock %}

{% block body %}

    <div style="margin-bottom: 12px;">
        <a href="{{ url('index') }}">{{ 'back'|trans }}</a>
    </div>

    <div>
        {% if activeRun is not null %}
            <a href="{{ url('test', { 'runId' : activeRun.id } ) }}" class="btn btn-special">Aktiven Test wiederaufnehmen</a><br>
        {% endif %}
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR_1'  )} ) }}" class="btn">Nicht polar 1</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR_2'  )} ) }}" class="btn">Nicht polar 2</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_NOT_POLAR'    )} ) }}" class="btn">Nicht polar (alle)</a><br>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_POLAR'        )} ) }}" class="btn">Polar</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_CHARGED'      )} ) }}" class="btn">Elektrisch geladen</a>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_POLAR_CHARGED')} ) }}" class="btn">Polar und elektrisch geladen</a><br>
        <a href="{{ url('testStart', { 'group' : constant('App\\Constant\\GroupType::GROUP_ALL'          )} ) }}" class="btn">Alle</a>
    </div>

{% endblock %}
