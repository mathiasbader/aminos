{% extends 'base.html.twig' %}

{% block body %}

    <div class="menu">
        <a href="{{ url('testOverview') }}" class="btn">{{ 'testYourself'|trans }}</a>
        {% if app.user.representation == 'svg' %}
            <a href="{{ url('index', { 'representation' : '3d'}) }}" class="btn">{{ 'models.3d'|trans }}</a>
        {% else %}
            <a href="{{ url('index', { 'representation' : 'svg'}) }}" class="btn">{{ 'models.flat'|trans }}</a>
        {% endif %}
        <a href="{{ url('profile') }}" style="float: right;">{% if app.user.email is null %}{{ 'profile'|trans }}{% else %}{{ app.user.name }}{% endif %}</a>
    </div>

    <div>
        {% include 'lib/_functionalGroup.html.twig' with {
            'rows'    : ['nonPolar1', 'nonPolar2'],
            'name'    : 'sideChains.nonPolar',
            'bgColor' : '#dcecdf',
        } %}
        {% include 'lib/_functionalGroup.html.twig' with {
            'rows'    : ['polar'],
            'name'    : 'sideChains.polar',
            'bgColor' : '#f6ecd9',
        } %}
        {% include 'lib/_functionalGroup.html.twig' with {
            'rows'     : ['electrically'],
            'name'     : 'sideChains.electricallyCharged',
            'bgColor'  : '#f7e6e5',
            'bgColor2' : '#e4f1f8',
        } %}
    </div>

{% endblock %}
