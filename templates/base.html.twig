<!DOCTYPE html>
<!--
    {{ include('_lib/ascii.html.twig') }}
    {{ 'sourceCode.thisProjectIsOpenSource'|trans }}
    {{ 'sourceCode.getTheSourceAt'|trans( { '{url}' : 'https://github.com/mathiasbader/aminos' } )|trans }}

-->
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{% block title %}{% if pageTitle is defined %}{{ pageTitle }} - {% endif %}{{ 'aminoacids'|trans }}{% endblock %}</title>

    <link href="{{ asset('css/main.css') }}" rel="stylesheet"/>
    {% block css %}{% endblock %}

    {% block javascripts %}{% endblock %}
</head>
<body{% block bodyParam %}{% endblock %}>
<main>
    <h2>{% if pageTitle is defined %}{{ pageTitle }}{% else %}{{ 'aminoacids'|trans }}{% endif %}</h2>

    <div style="text-align: right;">
        {% if app.request.get('_route') != 'app_login' %}

            {% if app.user %}
                {% if app.request.get('_route') == 'index' %}
                    [<a href="{{ url('lang', { 'lang' : 'en' }) }}">en</a>
                    <a href="{{ url('lang', { 'lang' : 'es' }) }}">es</a>
                    <a href="{{ url('lang', { 'lang' : 'de' }) }}">de</a>] &nbsp;&nbsp;
                {% endif %}

                {{ app.user.name }} &nbsp;&nbsp;
                <a href="{{ url('app_logout') }}">Logout</a>
            {% else %}
                <a href="{{ url('app_login') }}">Login</a>
            {% endif %}
        {% else %}
            <a href="{{ url('index') }}">Home</a>
        {% endif %}
    </div>

    {% block body %}{% endblock %}

</main>
</body>
</html>
