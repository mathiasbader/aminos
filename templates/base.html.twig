<!DOCTYPE html>
<!--
    {{ include('lib/_ascii.html.twig') }}
    {{ 'sourceCode.thisProjectIsOpenSource'|trans }}
    {{ 'sourceCode.getTheSourceAt'|trans( { '{url}' : 'https://github.com/mathiasbader/aminos' } ) }}

-->
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <link rel="apple-touch-icon" href="/favicon.png" sizes="300x300"/>
    <link rel="shortcut icon"    href="/favicon.ico" type="image/x-icon"/>

    <title>{% block title %}{% if pageTitle is defined %}{{ pageTitle }} - {% endif %}{{ 'aminoacids'|trans }}{% endblock %}</title>

    <link href="{{ asset('css/main.css') }}?v=3" rel="stylesheet"/>
    {% block css %}{% endblock %}

    <script type="text/javascript">
        function changeLanguage(lang) {
            document.getElementById("language").value = lang;
            document.getElementById("formLanguage").submit();
        }
    </script>
    {% block javascripts %}{% endblock %}
</head>
<body{% block bodyParam %}{% endblock %}>
<main>
    <h2>{% if pageTitle is defined %}{{ pageTitle }}{% else %}{{ 'aminoacids'|trans }}{% endif %}</h2>

    {% block body %}{% endblock %}

    {% block footer %}
        <div class="footer">
            <div style="float: left;">
                <a href="{{ url('about') }}">{{ 'about.link'|trans }}</a>
                <a href="{{ url('versions') }}">{{ 'versionHistory'|trans }}</a>
            </div>
            <a href="#" onclick="changeLanguage('en');">English</a>
            <a href="#" onclick="changeLanguage('es');">Espa√±ol</a>
            <a href="#" onclick="changeLanguage('de');">Deutsch</a>
        </div>

        <form action='{{ url('lang') }}' method="post" id="formLanguage">
            <input type="hidden" name="lang" id="language" value=""/>
            <input type="hidden" name="route" value="{{ app.request.uri }}"/>
        </form>
    {% endblock %}

</main>
</body>
</html>
